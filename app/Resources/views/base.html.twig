<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{asset('./css/style.css')}}"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    {% block body %}
        <body>
            {% block play %}
                <nav id='play'>
                    <ul>
                        <li class="btn-start"><a href="{{ path('home')}}">Play Now !</a></li>
                        <li class="btn-create"><a href="{{ path('home')}}">Create character</a></li>
                    </ul>
                </nav>
            {% endblock %}

            {% block navProfil %}
                <nav>
                    <ul>
                        <li><a href="{{ path('home')}}">Infos</a></li>
                    </ul>
                </nav>
            {% endblock %}

        </body>
    {% endblock %}
{% block javascripts %}{% endblock %}

</html>
